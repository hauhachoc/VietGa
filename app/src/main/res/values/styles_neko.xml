<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="VietGa.Preference" parent="PreferenceThemeOverlay">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColorSecondary">@color/text_color_high_emphasis</item>
    </style>

    <style name="VietGa.Button" parent="Theme.Widget.Button"></style>

    <style name="VietGa.Button.Primary" parent="Theme.Widget.Button.Primary">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="VietGa.Button.TextButton" parent="Theme.Widget.Button.TextButton">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>


    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="cursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">?attr/colorSecondary</item>
    </style>

    <style name="VietGa.TextInputLayout.OutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:theme">@style/cursor</item>
        <item name="boxStrokeColor">?attr/colorSecondary</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
        <item name="endIconTint">?attr/colorSecondary</item>
    </style>

    <style name="VietGa.Toolbar.TitleText" parent="">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:letterSpacing">-.023</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="VietGa.Toolbar.SubTitleText" parent="">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:letterSpacing">-.023</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
